@using Bikin_Back_End.View_models
@model LoginVM
@{
    ViewData["Title"] = "Login";
}
<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
<form method="post">
  <!-- Email input -->
  <div class="form-outline mb-4">
    <input asp-for="Username"  class="form-control w-25" />
    <label class="form-label" >User Name</label>
    <span class="text-danger" asp-validation-for="Username"></span>
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <input asp-for="Password" class="form-control  w-25 " />
    <label class="form-label" >Password</label>
    <span class="text-danger" asp-validation-for="Password"></span>
  </div>

  <!-- 2 column grid layout for inline styling -->
 
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div >
        <input  asp-for="RememberMe"/>
        <label > Remember me </label>
        <span class="text-danger" asp-validation-for="RememberMe"></span>
      </div>
    </div>

  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mb-4  w-25">Sign in</button>

</form>

