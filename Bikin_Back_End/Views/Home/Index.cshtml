@using Bikin_Back_End.Models
@using Bikin_Back_End.View_models
@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<main>
        <section id="home">
            <div class="container">
                <div class="row">
                    <div class="title text-center">
                        <h1>@Model.Homes.Title</h1>
                        <p>@Model.Homes.Description</p>
                        <button class="btn btn-primary">Get Started</button>
                    </div>
                    <div class="img text-center">
                        <img src="~/assets/img/@Model.Homes.Image" alt="">
                    </div>
                </div>
            </div>
        </section>
        <section id="services">
            <div class="container">
                <div class="row justify-content-around">
                    <div class="title text-center">
                        <h3>Services</h3>
                        <p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem.
                            Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui <br /> impedit
                            suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.
                        <p>
                    </div>
                    @foreach (ServicesM servis in Model.Servicess)
                   {
                    <div class="col-lg-2 rounded cards mb-4">
                        <div class="cardservis text-center">
                            <i class="@servis.Icon"></i>
                            <h5>@servis.Title</h5>
                            <p>@servis.Description</p>
                        </div>
                    </div>   
                   }
                    
                </div>
            </div>
        </section>
        <section id="contact">
            <div class="container">
                <div class="row mt-5">
                    <div class="serv">
                        <div class="title mt-4">
                            <h2>
                                Contact
                            </h2>                     
                        </div>
                        <div class="xet">
                            <div class="line"></div>
                        </div>
                        <div class="subtitle mt-4">
                            
                            <p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p>
                        </div>
                       </div>

                       <div class="col-lg-6">
                        <div class="address mt-3 p-3">
                            <div class="icon">
                                <i class="@servis.GetDatas().Result.FirstOrDefault(s=>s.Key=="location").Value mt-4"></i>
                            </div>
                            <div class="text mt-4">
                                <h3>Our Address</h3>
                                <p>A108 Adam Street, New York, NY 535022</p>
                            </div>
                        </div>
                       <div class="second-contact d-flex">
                        <div class="email mt-4 p-3">
                            <div class="icon">
                                <i class="@servis.GetDatas().Result.FirstOrDefault(s=>s.Key=="email").Value mt-2"></i>
                            </div>
                            <div class="text mt-3">
                                <h3>Email Us</h3>
                                <p>info@example.com <br> contact@example.com</p>
                            </div>
                        </div>
                        <div class="email mt-4 p-3 ms-4">
                            <div class="icon">
                                <i class="@servis.GetDatas().Result.FirstOrDefault(s=>s.Key=="phone").Value"></i>
                            </div>
                            <div class="text mt-3">
                                <h3>Call Us</h3>
                                <p>+1 5589 55488 55 <br> +1 6678 254445 41</p>
                            </div>
                        </div>
                       </div>
                       </div>

                       <div class="col-lg-6">
                        <div class="inputs mt-3">
                            <form action="" class=" mt-3 m-4">
                              
                                <div class="name mt-3">
                                    <input  style="width:50% ;"  type="text" class="form-control mt-3" placeholder="Your Name">
                                </div>
                                <div class="name mt-3">
                                    <input style="width:50% ;"  type="email" class="form-control" placeholder="Your Email">
                                </div>
                                                             
                                <div class="surname mt-3">
                                    <input type="text" class="form-control" placeholder="Subject">
                                </div>
                                <div class="message mt-3">
                                    <textarea class="form-control" name="" id="" style="width:100% ; border: solid 1px rgb(196, 194, 194);" rows="5" placeholder="Message"></textarea>
                                </div>
                                <div class="btn mt-3 p-4">
                                    <button class="btn btn-primary" style="background-color: rgb(59,78,248);">Send Message</button>
                                </div>
                            </form>
                        </div>
                       </div>
                </div>
            </div>
        </section>
    </main>

