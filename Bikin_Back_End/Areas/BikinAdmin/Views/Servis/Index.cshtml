@using Bikin_Back_End.Models

@model List<ServicesM>
@{
    ViewData["Title"] = "Servis";
}

<div class="table-responsive pt-3">
    <a style="color:white;font-size:20px" asp-controller="Servis" asp-action="Create" class="mb-3 btn btn-success">Create Services</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Icon
                </th>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Settings
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (ServicesM sr in Model)
            {
                <tr>
                    <td>
                        <i class="@sr.Icon"></i>
                    </td>
                    <td>
                        @sr.Title
                    </td>
                    <td>
                        @sr.Description
                    </td>
                    <td>
                        <div class="d-flex">
                            <div class="detail">
                                <a asp-controller="Servis" asp-action="Detail" asp-route-id="@sr.Id" class="btn btn-primary"><i class="mdi mdi-details"></i></a>
                            </div>
                            <div class="edit">
                                <a asp-controller="Servis" asp-action="Edit" asp-route-id="@sr.Id" class="btn btn-warning">
                                    <i class="mdi mdi-tooltip-edit"></i>
                                </a>
                            </div>
                            <div class="delete">
                                <a asp-controller="Servis" asp-action="Delete" asp-route-id="@sr.Id" class="btn btn-danger"> <i class="mdi mdi-delete-forever"></i></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



